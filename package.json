{
  "name": "me-drive",
  "version": "0.0.0-development",
  "private": true,
  "scripts": {
    "postinstall": "husky",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "e2e": "turbo run e2e",
    "lint:web": "turbo run lint --filter=web",
    "lint:server": "turbo run lint --filter=server",
    "format:web": "turbo run format --filter=web",
    "format:server": "turbo run format --filter=server",
    "test:web": "turbo run test --filter=web",
    "test:server": "turbo run test --filter=server",
    "e2e:web": "turbo run e2e --filter=web",
    "e2e:server": "turbo run e2e --filter=server",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*.{ts,tsx,md}": "prettier --write"
  }
}
