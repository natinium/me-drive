# Nest.js Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/medrive
DIRECT_URL=postgresql://user:password@localhost:5432/medrive

# Authentication
JWT_SECRET=
JWT_EXPIRES_IN=3600

# Cloudinary (for file storage)
# You can use either the individual variables or the URL format:
# Option 1: Individual variables
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
# Option 2: URL format (recommended)
# CLOUDINARY_URL=cloudinary://<your_api_key>:<your_api_secret>@<your_cloud_name>
CLOUDINARY_FOLDER=medrive

# Storage Configuration
STORAGE_DRIVER=cloudinary

# CORS
CLIENT_URL=http://localhost:3000